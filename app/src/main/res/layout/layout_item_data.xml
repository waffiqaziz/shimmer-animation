<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Shimmer Item Photo -->
    <ImageView
        android:id="@+id/shimmer_animation_first_item_photo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="36dp"
        android:contentDescription="@string/shimmer_animation_for_item_photo"
        android:src="@drawable/circular_border_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Shimmer Item Name -->
    <ImageView
        android:id="@+id/shimmer_animation_first_item_name"
        android:layout_width="170dp"
        android:layout_height="25dp"
        android:layout_marginStart="16dp"
        android:contentDescription="@string/shimmer_animation_for_item_name"
        android:src="@drawable/circular_border_background"
        app:layout_constraintStart_toEndOf="@id/shimmer_animation_first_item_photo"
        app:layout_constraintTop_toTopOf="@id/shimmer_animation_first_item_photo" />

    <!-- Shimmer Item Price -->
    <ImageView
        android:id="@+id/shimmer_animation_first_item_price"
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:layout_marginStart="16dp"
        android:contentDescription="@string/shimmer_animation_for_item_price"
        android:src="@drawable/circular_border_background"
        app:layout_constraintBottom_toTopOf="@id/shimmer_animation_first_item_description"
        app:layout_constraintStart_toEndOf="@id/shimmer_animation_first_item_photo"
        app:layout_constraintTop_toBottomOf="@id/shimmer_animation_first_item_name" />

    <!-- Shimmer Item Description -->
    <ImageView
        android:id="@+id/shimmer_animation_first_item_description"
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:layout_marginStart="16dp"
        android:contentDescription="@string/shimmer_animation_for_item_description"
        android:src="@drawable/circular_border_background"
        app:layout_constraintBottom_toBottomOf="@id/shimmer_animation_first_item_photo"
        app:layout_constraintStart_toEndOf="@id/shimmer_animation_first_item_photo"
        app:layout_constraintTop_toBottomOf="@id/shimmer_animation_first_item_price" />

</androidx.constraintlayout.widget.ConstraintLayout>
